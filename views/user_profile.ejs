<%- include("../partials/header-user") -%>
<!-- partial -->
<div class="container-fluid page-body-wrapper">
  <nav class="sidebar sidebar-offcanvas" id="sidebar">
    <ul class="nav">
      <li class="nav-item">
        <a class="nav-link" <% if (user.isAuthor) { %>
                href="/author/dashboard"
                <% }else{ %>
                href="/user/dashboard"
                <% } %> >
          <i class="mdi mdi-home menu-icon"></i>
          <span class="menu-title">Dashboard</span>
        </a>
      </li>
      <% if (user.isAuthor) { %>
      
      <li class="nav-item">
        <a class="nav-link" href="/author/exam/new">
          <i class="mdi mdi-home menu-icon"></i>
          <span class="menu-title">Create new Test</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/author/hostLiveClass">
          <i class="mdi mdi-calendar-blank menu-icon"></i>
          <span class="menu-title">Host a live class</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/author/send-message">
          <i class="mdi mdi-message menu-icon"></i>
          <span class="menu-title">Sent Message</span>
        </a>
      </li>
      
      <% }else{ %>
          <li class="nav-item">
            <a class="nav-link" href="/user/liveclasses">
              <i class="mdi mdi-home menu-icon"></i>
              <span class="menu-title">Live Classes</span>
            </a>
          </li>
      <% } %>
    </ul>
  </nav>
  <!-- partial -->
  <div class="main-panel">
    <div class="content-wrapper">
      <div class="row">
        <div class="col-md-12 stretch-card">
          <div class="card">
            <div class="card-body">
              <p class="card-title">Profile</p>
              <div class="container mt-3">
                <% if(notification && notification.length !== 0){ %>
                <div class="alert alert-primary" role="alert" >
                  <%= notification  %>
                </div>
                <% } %>
                <% if(error && error.length !== 0){ %>
                <div class="alert alert-danger" role="alert" >
                  <%= error  %>
                </div>
                <% } %>
                <% if(success && success.length !== 0){ %>
                <div class="alert alert-success" role="alert" >
                  <%= success  %>
                </div>
                <% } %>
              </div>
              <div class="table-responsive">
              



<div class="width-50 m-auto text-center">
	<h3 class="display-3">Profile Info<hr></h3>
	
     <p>Name: <strong><%= user.name %></strong></p>
	<p>Class: <strong><%= user.class %></strong></p>
	<p>Section: <strong><%= user.section %></strong></p>	
  <p>Roll: <strong><%= user.roll %></strong></p>  

	<a href="/user/profile/edit" class="btn btn-primary btn-sm" >Edit Profile</a>
	<hr>
</div>




              
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- content-wrapper ends -->
    <%- include("../partials/footer-user") -%>